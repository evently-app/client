{
  "name": "evently",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "setup": "yarn; cd ios && rm -rf Pods && pod install && cd ..",
    "clean": "cd ios && rm -rf build && cd ..",
    "android": "react-native run-android",
    "ios": "react-native run-ios"
  },
  "dependencies": {
    "@mapbox/react-native-mapbox-gl": "^6.1.3",
    "axios": "^0.18.0",
    "detox-cli": "^10.0.7",
    "lodash": "^4.17.11",
    "mocha": "^6.0.2",
    "moment": "^2.24.0",
    "react": "16.6.3",
    "react-native": "^0.59.1",
    "react-native-blur": "^3.2.2",
    "react-native-circular-progress": "^1.1.0",
    "react-native-firebase": "^5.2.2",
    "react-native-haptic-feedback": "^1.5.0",
    "react-native-interactable": "1.0.0-alpha.1",
    "react-native-linear-gradient": "^2.5.4",
    "react-native-navigation": "^2.12.0",
    "react-native-svg": "^9.2.4",
    "react-native-svg-transformer": "^0.12.1",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "24.1.0",
    "detox": "^11.0.2",
    "jest": "^24.5.0",
    "metro-react-native-babel-preset": "0.51.1",
    "react-test-renderer": "16.6.3"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/evently.app",
        "build": "xcodebuild -project ios/evently.xcodeproj -scheme evently -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone X"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_24"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      }
    },
    "test-runner": "jest"
  }
}
